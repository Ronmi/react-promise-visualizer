{
  "name": "react-promise-visualizer",
  "version": "0.0.5",
  "description": "react component showing visual notification for asynchronized works",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "react", "promise", "ui", "visual-notification"
  ],
  "scripts": {
    "postinstall": "typings install",
    "typings": "typings",
    "build": "rm -fr dist ; tsc -d --outDir dist && rm -fr dist/example dist/test && cp -r assets dist/",
    "start": "tsc && webpack && concurrently \"npm run webpack:w\" \"npm run server\"",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test:w": "karma start --browsers PhantomJS",
    "test:f": "karma start --browsers Firefox",
    "test:c": "karma start --browsers Chrome",
    "test:a": "karma start --browsers PhantomJS,Firefox,Chrome",
    "test": "karma start --single-run --browsers PhantomJS"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ronmi/react-promise-visualizer.git"
  },
  "author": "Ronmi Ren <ronmi.ren@gmail.com> (https://patrolavia.com/)",
  "bugs": {
    "url": "https://github.com/Ronmi/react-promise-visualizer/issues"
  },
  "homepage": "https://github.com/Ronmi/react-promise-visualizer#readme",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "babel-polyfill": "^6.13.0",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-lodash": "^3.2.6",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.14.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "concurrently": "^2.2.0",
    "css-loader": "^0.23.1",
    "enzyme": "^2.4.1",
    "file-loader": "^0.9.0",
    "istanbul-instrumenter-loader": "^0.2.0",
    "json-loader": "^0.5.4",
    "karma": "^1.2.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-remap-istanbul": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "lodash": "^4.15.0",
    "lodash-webpack-plugin": "^0.10.0",
    "mocha": "^3.0.2",
    "phantomjs-prebuilt": "^2.1.12",
    "react-addons-test-utils": "^15.3.0",
    "remap-istanbul": "^0.6.4",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "typescript": "^1.8.10",
    "typings": "^1.3.2",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  }
}
